.my-container {
    width: 100%;
}
.info-items {
    width: 100%;
    height: 442rpx;
    background-color: white;
    margin-top: 19rpx;
}
.item-detail {
    width: 100%;
    height: 85rpx;
    background-color: white;
}
.item-pic-detail {
    width: 100%;
    height: 170rpx;
    background-color: white;
}
.item-detail:not(:last-child) {
    border-bottom: 1rpx solid #e9e8ed;
}
.item-detail:last-child {
    border-bottom: 1rpx solid #e9e8ed;
}
.discount-coupon {
    width: 100%;
    height: 85rpx;
    background-color: white;
    margin-top: 19rpx;
}
.detail_info {
    width: 682rpx;
    margin: 0 auto;
}
.user-wechat-info > image {
    width: 96rpx;
    height: 96rpx;
    margin: 30rpx 30rpx 42rpx -42rpx;
    border: 4rpx solid #BA4356;
    border-radius: 50%;
    /*display: block;*/
    display: inline-block;
    text-align: center;
    position: absolute; 
    left:50%
    
}
.detail-info {
    height: 40rpx;
    padding: 22rpx 20rpx;
}
.detail-info-pic {
    height: 169rpx;
    padding: 22rpx 20rpx;
}
.order-icon {
    width: 39rpx;
    height: 41rpx;
    display: block;
    float: left;
    margin-right: 24rpx;
}
.detail-info > .item-name {
    display: block;
    float: left;
    margin-left: 10rpx;
    line-height: 42rpx;
}
.detail-info-pic > .item-name {
    display: block;
    float: left;
    margin-left: 10rpx;
    line-height: 170rpx;
}
.right-array {
    width: 16rpx;
    height: 25rpx;
    float: right;
    margin-top: 10rpx;
}
.right-picpath {
    width: 120rpx;
    height: 120rpx;
    float: right;
    margin-top: 10rpx;
    border-radius: 50%;
}
.detail-info > .item-num {
    display: block;
    float: right;
    line-height: 42rpx;
    font-size: 24rpx;
    color:#c81624;
    margin-right: 28rpx;
}
.section{
    padding: 0 28rpx;
    height:84rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.section__title{
    width:200rpx;
}

