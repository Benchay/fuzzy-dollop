/*数量加减容器*/
.stepper {
  width: 160rpx;
  height: 52rpx;
  /*给主容器设一个边框*/
  border: 1px solid #ccc;
  border-radius: 6rpx;
  box-sizing: border-box;
  overflow: hidden;
}

/*加号和减号*/
.stepper text {
  width: 38rpx;
  line-height: 26px;
  text-align: center;
  float: left;
  background: #f5f5f5;
}
.stepper>text:first-child {
  line-height: 48rpx;
}
/*数值*/
.stepper input {
  width: 80rpx;
  height: 52rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 24rpx;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  box-sizing: border-box;
}

/*普通样式*/
.stepper .normal{
  coLor:#999;
  font-size: 40rpx;
  height: 50rpx;
  line-height: 50rpx;
}

/*禁用样式*/
.stepper .disabled{
  color: #ccc;
}
.numberButton{
  margin-top: 60rpx;
}