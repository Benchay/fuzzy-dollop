  /**
   * 页面加载时
   */
  onLoad: function (options) {
    const _this = this;
    if (options.inviteUserId){
      app.globalData.inviteUserId = options.inviteUserId;
    }
    _this.getUserInfo();
    _this.loadForData();
    
  },
  onShow:function(){
