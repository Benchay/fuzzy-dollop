const app = getApp();
const commonFun = require('../../../utils/common.js')
var interval = null 
Page({

  /**
   * 页面的初始数据
   */
  data: {
    phoneNub:'',
    vervifyCode:'',
    time:'获取验证码',
    currentTime:60,
    disabled:false,
    bntDisabeled:false
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
  
